import { WalletAccount, Wallet, XRPLIdentifierString, RequiredFetures, XRPLSignTransactionFeature, XRPLSignAndSubmitTransactionFeature } from '@xrpl-wallet-standard/core';
export { bytesToHex, hexToBytes } from '@xrplf/isomorphic/utils';

declare class XRPLWalletAccount implements WalletAccount {
    #private;
    get address(): string;
    get publicKey(): Uint8Array;
    get chains(): readonly ["xrpl:0"];
    get features(): readonly ["xrpl:signTransaction", "xrpl:signAndSubmitTransaction"];
    constructor(address: string);
}

declare abstract class XRPLBaseWallet implements Wallet {
    abstract get version(): Wallet['version'];
    abstract get chains(): XRPLIdentifierString[];
    abstract get accounts(): XRPLWalletAccount[];
    abstract get icon(): Wallet['icon'];
    abstract get name(): Wallet['name'];
    abstract get features(): RequiredFetures & XRPLSignTransactionFeature & XRPLSignAndSubmitTransactionFeature;
}

export { XRPLBaseWallet, XRPLWalletAccount };
